<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FF2A45DC"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewComentarioNombreHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Hour"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:text="Potato"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewComentarioNombreHora"
        app:layout_constraintTop_toBottomOf="@+id/textViewComentarioNombreHora" />
</androidx.constraintlayout.widget.ConstraintLayout>